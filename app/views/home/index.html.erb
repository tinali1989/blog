<div align="left">
    <% form_for(@user,:url => {:controller=>"home", :action => "login"}) do |f| %>
    <h2>Blog Management</h2>
	<br>
	<p style="color: red"><%= flash[:warning] %></p>
    <table>
        <tr>
            <td align='right'>
                username:
            </td>
            <td align='left'>
                <%= f.text_field :username %>
            </td>
        </tr>
        <tr>
            <td align='right'>
                password:
            </td>
            <td align='left'>
                <%= f.password_field :password %>
            </td>
        </tr>
        <tr>
            <td colspan='2' align="right">
                <%= f.submit "Sign In" %>
            </td>
        </tr>
    </table>
    <%end %>
</div>
