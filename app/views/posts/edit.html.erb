<h1>Editing post</h1>
<%= error_messages_for :post %>

<% form_for(@post) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Context</b><br />
    <%= f.text_area :context %>
  </p>

  <p>
    <%= f.submit "Update"%>
  </p>
<% end %>

