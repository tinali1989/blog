<h2>User Management</h2>
<br>
<table width='70%' style="border:1px solid #000000;">
    <tr>
        <th align='left' width='20%'>
            Username
        </th>
        <th align='left' width='20%'>
            Password
        </th>
        <th align='left' width='10%'>
            Role
        </th>
        <th align='left' width='10%'>
            Action
        </th>
    </tr>
    <% for user in @users %>
    <tr style='background-color:<%= cycle("#EEEEEE","")%>'>
        <td>
            <%=h user.username %>
        </td>
        <td>
            ******
        </td>
        <td>
            <%=h user.role == '1' ? 'Admin':'Customer' %>
        </td>
        <td>
            <%= link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete %>
        </td>
    </tr>
    <% end %>
</table>
<br/>
<%= link_to 'New user', new_user_path %>
